<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Management Application Dashboard</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/Content/admin/assets/images/favicon.ico">

    <!-- Bootstrap CSS -->
    <link href="/Content/admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!-- Font Awesome CSS -->
    <link href="/Content/admin/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="/Content/admin/assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/alertify.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/alertify.js"></script>
    <link href="http://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>

</head>

<body class="adminbody">

    <div id="main">

        <!-- top bar navigation -->
        <div class="headerbar">

            <!-- LOGO -->
            <div class="headerbar-left">
                <a href="~/Admin" class="logo">Home<span></span></a>
            </div>

            <nav class="navbar-custom">

                <ul class="list-inline float-right mb-0">

                    <div class="dropdown">

                        <a class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <img src="~/Content/admin/assets/images/avatars/admin.png" alt="Profile image" class="avatar-rounded">
                        </a>

                        @using Microsoft.AspNet.Identity
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="dropdown-menu">

                                    <a href="~/Manage" class="dropdown-item notify-item">
                                        <i class="fa fa-user"></i> <span>Profile</span>
                                    </a>
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item notify-item">
                                        <i class="fa fa-power-off"></i> <span>Logout</span>
                                    </a>
                                </div>

                            }
                        }

                        
                    </div>

                    

                    

                </ul>

                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left">
                            <i class="fa fa-fw fa-bars"></i>
                        </button>
                    </li>
                </ul>

            </nav>

        </div>
        <!-- End Navigation -->
        <!-- Left Sidebar -->
        <div class="left main-sidebar">

            <div class="sidebar-inner leftscroll">

                <div id="sidebar-menu">

                    <ul>

                        <li class="submenu">
                            <a class="active" href="~/Admin"><i class="fa fa-fw fa-bars"></i><span> Dashboard </span> </a>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fa fa-fw fa-glass"></i> <span>Perfumes</span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="~/Admin/AddPerfume">Add Perfumes</a></li>
                                <li><a href="~/Admin/ViewPerfumes">View All</a></li>
                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fa fa-fw fa-ravelry"></i> <span> Scents </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="~/Admin/AddScent">Add Scents</a></li>
                                <li><a href="~/Admin/ViewScents">View All</a></li>
                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fa fa-fw fa-shopping-cart"></i> <span> Orders </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="~/DashBoard/ViewUtilityBills">View All</a></li>
                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="~/DashBoard/ViewSchedule"><i class="fa fa-fw fa-user"></i><span> Users </span> </a>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fa fa-fw fa-cog"></i> <span> Settings </span> <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">
                                <li><a href="~/Manage">Password Update</a></li>
                            </ul>
                        </li>

                    </ul>


                    <div class="clearfix"></div>

                </div>

                <div class="clearfix"></div>

            </div>

        </div>
        <!-- End Sidebar -->


        @RenderBody()

    </div>
    <!-- END content -->
    </div>
    <!-- END content-page -->



    <footer class="footer">
        <span class="text-right">
            Copyright <a target="_blank" href="#">Perfume Shop Application</a>
        </span>
        <span class="float-right">
            Powered by <a target="_blank"><b>Aroma Perfume</b></a>
        </span>
    </footer>

    </div>
    <!-- END main -->

    <script src="~/Content/admin/assets/js/modernizr.min.js"></script>
    <script src="~/Content/admin/assets/js/jquery.min.js"></script>
    <script src="~/Content/admin/assets/js/moment.min.js"></script>

    <script src="~/Content/admin/assets/js/popper.min.js"></script>
    <script src="~/Content/admin/assets/js/bootstrap.min.js"></script>

    <script src="~/Content/admin/assets/js/detect.js"></script>
    <script src="~/Content/admin/assets/js/fastclick.js"></script>
    <script src="~/Content/admin/assets/js/jquery.blockUI.js"></script>
    <script src="~/Content/admin/assets/js/jquery.nicescroll.js"></script>
    <!-- App js -->
    <script src="~/Content/admin/assets/js/pikeadmin.js"></script>
    <script src="~/Content/admin/assets/plugins/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/Content/admin/assets/plugins/counterup/jquery.counterup.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>



    @{
        if (Alert.PerfumeDelete)
        {
            <script>
        alertify.warning('Deleted!');
            </script>
            Alert.PerfumeDelete = false;
        }
    }


    @{
        if (Alert.PerfumeAdd)
        {
            <script>
        alertify.success('Perfume Added Successfully!');
            </script>
            Alert.AddedToCart = false;
        }
    }



    @{
        if (Alert.ScentDelete)
        {
            <script>
        alertify.warning('Deleted!');
            </script>
            Alert.PerfumeDelete = false;
        }
    }


    @{
        if (Alert.ScentAdd)
        {
            <script>
        alertify.success('Scent Added Successfully!');
            </script>
            Alert.AddedToCart = false;
        }
    }

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>




</body>

</html>